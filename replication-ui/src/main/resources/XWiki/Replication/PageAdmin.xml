  <content>{{velocity}}
#if (!$replicationDocument)
  #set ($replicationDocument = $doc)
#end
#set ($instances = $services.replication.getRegisteredInstances())
#if ($instances.isEmpty())
   #set ($wikiAdminURL = $xwiki.getURL('XWiki.XWikiPreferences', 'admin', $escapetool.url({'section' : 'Replication'})))
  [[{{translation key="replication.admin.noinstance"/}}&gt;&gt;path:$wikiAdminURL]]
#else
  #set ($controllers = $services.replication.document.getDocumentReplicationControllers())
  #set ($resolvedController = $services.replication.document.resolveDocumentReplicationController($replicationDocument.documentReference.parent))
  #if ($controllers || $resolvedController)
    #set ($discard = $xwiki.ssx.use('XWiki.Replication.PageAdmin'))
    #set ($discard = $xwiki.jsx.use('XWiki.Replication.PageAdmin'))

    == {{translation key="replication.admin.controller"/}}

    #set ($parentController = $services.replication.document.resolveDocumentReplicationController($replicationDocument.documentReference.parent.parent))
    #if ($request.setcontroller)
      #if ("$!request.controller" == '')
        #set ($controller = $NULL)
      #else
        #set ($controller = $request.controller)
      #end
      #set ($void = $services.replication.document.setDocumentReplicationController($replicationDocument.documentReference.parent, $controller))
      {{success}}{{translation key="replication.admin.setcontroller.#if($controller)changed#{else}reseted#end"/}}{{/success}}

    #end
    #set ($controller = $services.replication.document.getDocumentReplicationController($replicationDocument.documentReference.parent))
    #set ($resolvedController = $services.replication.document.resolveDocumentReplicationController($replicationDocument.documentReference.parent))
    #set ($controllers = $services.replication.document.getDocumentReplicationControllers())
    #if ($resolvedController)
      #if (!$controllers || $controllers.size() == 1)
        {{translation key="replication.controller.${resolvedController}.name"/}}
        {{translation key="replication.controller.${resolvedController}.description"/}}
      #elseif ($controllers.size() &gt; 1)
        {{html}}
          &lt;form action="$xwiki.relativeRequestURL" method="post"&gt;
            &lt;select name="controller"&gt;
              &lt;option value="" title="$escapetool.xml($services.localization.render("replication.controller.${parentController}.description"))"&gt;$escapetool.xml($services.localization.render('replication.admin.setcontroller.default', [$services.localization.render("replication.controller.${parentController}.name")]))&lt;/option&gt;
              #foreach($controllerId in $controllers)
                &lt;option value="$controllerId" #if($controllerId == $controller)selected#end title="$escapetool.xml($services.localization.render("replication.controller.${controllerId}.description"))"&gt;$escapetool.xml($services.localization.render("replication.controller.${controllerId}.name"))&lt;/option&gt;
              #end
            &lt;/select&gt;
            &lt;button class="btn" name="setcontroller"&gt;$escapetool.xml($services.localization.render('replication.admin.setcontroller.button'))&lt;/button&gt;
          &lt;/form&gt;
        {{/html}}
      #end
      #set ($resolvedInstances = $services.replication.document.getDocumentInstances($replicationDocument.documentReference))
      ## More
      #set ($uixsId = "replication.admin.page.${resolvedController}")
      #set ($uixs = $services.uix.getExtensions($uixsId))
      #if (!$uixs.isEmpty())

        {{uiextensions extensionPoint="$uixsId"/}}
      #end
    #else
      {{warning}}{{translation key="replication.admin.nocontroller"/}}{{/warning}}
    #end
  #end

  == {{translation key="replication.admin.page.troubleshooting"/}}

  #if ($resolvedInstances.size() &gt; 0)
    #if ($services.security.authorization.hasAccess('ADMIN', $replicationDocument))
      #if ($request.replication_send)
        ## TODO: send all translations too
        #set ($void = $services.replication.document.replicateCompleteDocument($replicationDocument.documentReferenceWithLocale))
        {{success}}
          Page pushed to other instances.
        {{/success}}

      #end
      {{translation key="replication.admin.page.push.description"/}}

      {{html}}
        &lt;form action="$xwiki.relativeRequestURL" method="post"&gt;
          &lt;button class="btn btn-danger" name="replication_send"&gt;$escapetool.xml($services.localization.render('replication.admin.page.push.button'))&lt;/button&gt;
        &lt;/form&gt;
      {{/html}}
    #end
  #else
    {{translation key="replication.admin.page.notreplicated"/}}
  #end
#end
{{/velocity}}</content>
